{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "CoworkAny",
    "identifier": "com.coworkany.desktop",
    "version": "0.1.0",
    "build": {
        "beforeDevCommand": "npm run dev",
        "devUrl": "http://localhost:5173",
        "beforeBuildCommand": "npm run build",
        "frontendDist": "../dist"
    },
    "app": {
        "withGlobalTauri": true,
        "windows": [
            {
                "label": "main",
                "title": "CoworkAny",
                "width": 1000,
                "height": 800,
                "resizable": true,
                "fullscreen": false,
                "decorations": true,
                "transparent": true,
                "shadow": true,
                "alwaysOnTop": false
            },
            {
                "label": "dashboard",
                "title": "CoworkAny Dashboard",
                "width": 400,
                "height": 600,
                "resizable": true,
                "fullscreen": false,
                "decorations": false,
                "transparent": true,
                "shadow": true,
                "visible": false
            },
            {
                "label": "settings",
                "title": "CoworkAny Settings",
                "width": 600,
                "height": 400,
                "resizable": false,
                "fullscreen": false,
                "decorations": false,
                "transparent": true,
                "shadow": true,
                "visible": false
            },
            {
                "label": "quickchat",
                "title": "Quick Chat",
                "width": 420,
                "height": 560,
                "resizable": true,
                "fullscreen": false,
                "decorations": true,
                "transparent": false,
                "shadow": true,
                "alwaysOnTop": true,
                "visible": false,
                "center": true
            }
        ],
        "security": {
            "csp": null
        }
    },
    "plugins": {
        "shell": {
            "open": true
        },
        "updater": {
            "endpoints": [
                "https://github.com/OWNER/REPO/releases/latest/download/latest.json"
            ],
            "pubkey": "YOUR_UPDATER_PUBKEY_HERE"
        }
    }
}